<tr>
  <td>
    <%= post.daily_hours %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td class="d-none d-lg-block">
    <%= link_to truncate(post.work_performed), post %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %>
  </td>
    <td>
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
